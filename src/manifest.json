{
  "manifest_version": 3,
  "name": "Calendar to Google Calendar",
  "version": "1.0.0",
  "description": "Extract calendar events from CapEdge and export to Google Calendar (.ics format)",
  "permissions": [
    "activeTab",
    "storage",
    "sidePanel",
    "downloads"
  ],
  "host_permissions": [
    "https://capedge.com/*"
  ],
  "background": {
    "service_worker": "src/background/service-worker.ts",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["https://capedge.com/user/dashboard*"],
      "js": ["src/content/content-script.ts"],
      "run_at": "document_idle"
    }
  ],
  "side_panel": {
    "default_path": "src/sidepanel/index.html"
  },
  "action": {
    "default_title": "Open Calendar Export",
    "default_icon": {
      "16": "icons/icon-16.png",
      "32": "icons/icon-32.png",
      "48": "icons/icon-48.png",
      "128": "icons/icon-128.png"
    }
  },
  "icons": {
    "16": "icons/icon-16.png",
    "32": "icons/icon-32.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  }
}
